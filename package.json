{
  "name": "wemorize",
  "version": "0.1.0",
  "description": "A web-based online platform allowing users to learn anything with community-created flashcard sets",
  "scripts": {
    "build": "tsc --build -v tsconfig.build.json",
    "watch-server": "npm -w @wemorize/server run watch",
    "watch-client": "npm -w @wemorize/client run watch"
  },
  "keywords": [
    "typescript",
    "learning",
    "education",
    "flashcards",
    "social media",
    "community",
    "webapp"
  ],
  "workspaces": [
    "packages/common",
    "packages/server",
    "packages/client"
  ],
  "repository": "https://github.com/frizim/wemorize",
  "author": "Friedrich Zimniak",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "nodemon": "^3.1.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}
